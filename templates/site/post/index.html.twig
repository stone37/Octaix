{% extends 'site/layout.html.twig' %}

{% block title %}Le Blog de l'agence | Actualités et articles pratiques{% endblock %}

{% block meta %}
    {% set content = "Découvrez nos articles de blog sur des actualités ou problématiques liées à l’univers du SEO, des réseaux sociaux, de WordPress et de la création de sites web et d'application mobile." %}
    <meta name="description" content="{{ content }}" />
    <meta property="og:description" content="{{ content }}" />
    <meta name="twitter:description" content="{{ content }}" />
{% endblock %}

{% block app_intro %}
    <div class="view jarallax" data-jarallax='{"speed": 0.2}'
         style="background-image: url({{ asset('images/data/contact.jpg') }});
                 background-repeat: no-repeat; background-size: cover; background-position: center center;">
        <div class="mask rgba-black-strong">
            <div class="container h-100 d-flex justify-content-center align-items-center">
                <div class="row pt-5 mt-3">
                    <div class="col-md-12 mb-3">
                        <div class="intro-info-content text-center">
                            <h1 class="display-5 white-text font-weight-stone-600 mb-3 wow fadeInDown" data-wow-delay="0.3s">
                                Le blog de l'agence, astuces et articles pratiques
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bc text-white mb-5">
        {{ wo_render_breadcrumbs({ viewTemplate: '_breadcrumb.html.twig', listClass: 'breadcrumb',
            itemClass: 'breadcrumb-item', separator: '>', separatorClass: 'fas fa-angle-right'}) }}
    </div>
{% endblock %}

{% block app_body %}
    {% include 'site/post/index/_content.html.twig' %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        @media (max-width: 767px) {
            .jarallax {
                min-height: 200px
            }

            html,
            body,
            header,
            .jarallax {
                height: 200px;
            }
        }

        @media (min-width: 768px) and (max-width: 1024px) {
            .jarallax {
                min-height: 200px
            }

            html,
            body,
            header,
            .jarallax {
                height: 40vh;
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}



<section class="container-fluid app-service-show">
    <div class="row d-flex justify-content-center mt-4 mt-md-3 mt-lg-4 mx-lg-4">
        <div class="col-12">
            <h1 class="display-5 font-weight-stone-600 text-center wow fadeInDown my-5 mx-lg-5">
                Tout ce dont votre <span class="text-danger">business à besoin</span>, en un seul
                et <span class="text-primary">même endroit</span>.
            </h1>
        </div>
    </div>

    {% if service.children|length > 0 %}
        <div class="row mx-lg-4">
            {% for children in service.children %}
                {% if children.enabled %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card card-cascade narrower service blue-grey lighten-5 wow fadeInRight mb-5">
                            <div class="view view-cascade overlay">
                                <img class="card-img-top" src="{{ vich_uploader_asset(children, 'file') }}"
                                     alt="{{ children.name }}">
                                <a>
                                    <div class="mask rgba-white-slight"></div>
                                </a>
                            </div>
                            <div class="card-body card-body-cascade text-center pb-2">
                                <h4 class="h4-responsive font-weight-stone-600 mb-3 mt-2">{{ children.name }}</h4>
                                <div class=" dark-grey-text">
                                    {{ children.description|raw }}
                                </div>

                                {#<a href="{{ path('app_service_show_s', {'slug': service.slug, 'sub_slug': children.slug}) }}"
                                   class="btn btn-secondary text-default font-weight-stone-600 btn-rounded mt-2 mb-3">
                                    En savoir plus <i class="fas fa-arrow-right ml-2 ml-md-1 ml-lg-2"></i>
                                </a>#}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
</section>


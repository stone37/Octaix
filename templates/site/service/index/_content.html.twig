<section class="container-fluid app-service">
    {% if services|length > 0 %}
        <div class="row mt-5 d-flex justify-content-center">
            <div class="col-12 col-md-10 col-lg-9">
                <h1 class="display-5 font-weight-stone-600 text-center my-5 wow fadeInDown">
                    <span class="amber-text">Comprendre</span>,
                    <span class="text-default">rechercher</span>,
                    <span class="text-success">concevoir</span>,
                    <span class="cyan-text">développer</span>,
                    <span class="black-text">garantir</span>,
                    <span class="text-danger">évoluer</span>.
                    <span class="text-primary">Ensemble</span>
                </h1>
            </div>
        </div>
        <div class="row service">
            <div class="col-12">
                <div class="row mb-3 mb-md-4 px-3 px-md-0">
                    {% for service in services %}
                        <div class="col-12 col-md-6 d-flex justify-content-center align-items-center p-0 mb-5">
                            <div class="card card-image wow fadeIn" data-wow-delay="0.3s"
                                 style="background-image: url({{ vich_uploader_asset(service, 'file') }});">
                                <div class="text-white text-center d-flex justify-content-center align-items-center
                                 rgba-black-strong px-4">
                                    <div class="first">
                                        <h1 class="display-5 font-weight-stone-600 mb-4">{{ service.name }}</h1>
                                        <p>{{ service.description|raw }}</p>
                                        <div class="mt-4">
                                            <a href="{{ path('app_service_show', {'slug': service.slug}) }}" class="btn btn-secondary btn-rounded btn-md">
                                                En savoir plus <i class="fas fa-angle-right right"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="second">
                                        <h1 class="display-5 font-weight-stone-600">{{ service.name }}</h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</section>


{% if reviews|length > 0 %}
    <section class="container my-5">
        <div class="row">
            <div class="col-12">
                <section class="team-section text-center dark-grey-text">
                    <h1 class="display-5 font-weight-bold mb-3 pb-2 wow fadeInUp">Nos clients témoignent</h1>
                    <div class="row text-center wow fadeInRight">
                        {% for review in reviews %}
                            <div class="col-md-4 mb-4">
                                <div class="testimonial">
                                    <h4 class="font-weight-bold dark-grey-text mt-4">{{ review.name }}</h4>
                                    <p class="font-weight-normal dark-grey-text">
                                        <i class="fas fa-quote-left pr-2"></i>{{ review.comment }}
                                    </p>
                                    <div class="orange-text">
                                        {% if review.rating == 5 %}
                                            {% for item in 1..(review.rating) %}
                                                <i class="fas fa-star"> </i>
                                            {% endfor %}
                                        {% else %}
                                            {% for item in 1..(review.rating) %}
                                                <i class="fas fa-star"> </i>
                                            {% endfor %}

                                            {% for item in (review.rating+1)..5 %}
                                                <i class="far fa-star"> </i>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </section>
            </div>
        </div>
    </section>
{% endif %}





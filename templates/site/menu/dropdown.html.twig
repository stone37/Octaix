<li class="nav-item avatar dropdown">
    <a class="nav-link dropdown-toggle" id="userDropdownMenu" data-toggle="dropdown"
       aria-haspopup="true" aria-expanded="false">
        {% if vich_uploader_asset(user, 'file') %}
            <img src="{{ vich_uploader_asset(user, 'file') }}" class="rounded-circle z-depth-0" alt="avatar image">
        {% else %}
            <span class="user-prefix d-inline-block rounded-circle">
                {{ app_prefix_user_name(user) }}
            </span>
        {% endif %}
    </a>
    <div class="dropdown-menu dropdown-menu-right dropdown-primary"
         aria-labelledby="userDropdownMenu" style="margin-top: 1px !important;">

        {% if not is_mobile() %}
            <a class="dropdown-item" href="{{ path('app_dashboard_index') }}">
                <i class="fas fa-th-large mr-2"></i>
                Tableau de bord
            </a>
            <a class="dropdown-item" href="{{ path('app_dashboard_advert_index_active') }}">
                <i class="fas fa-clipboard-list mr-2"></i>
                Mes annonces
            </a>

            {% if settings.activeMessage %}
                <a class="dropdown-item" href="{{ path('app_dashboard_message_receive') }}">
                    <i class="far fa-envelope mr-2"></i>
                    Mes messages
                </a>
            {% endif %}

            {% if settings.activeAlert %}
                <a class="dropdown-item" href="{{ path('app_dashboard_alert_index_active') }}">
                    <i class="far fa-bell mr-2"></i>
                    Mes alertes
                </a>
            {% endif %}

            {% if settings.activeAdFavorite %}
                <a class="dropdown-item" href="{{ path('app_dashboard_favorite_index') }}">
                    <i class="far fa-heart mr-2"></i>
                    Mes favoris
                </a>
            {% endif %}

            <a class="dropdown-item" href="">
                <i class="fas fa-user mr-2"></i>
                Mon profil
            </a>
        {% endif %}
        <a class="dropdown-item" href="{{ path('app_logout') }}">
            <i class="fas fa-power-off mr-2"></i>
            Deconnexion
        </a>
    </div>
</li>

<section class="container">
    <div class="row my-5 py-5 d-flex justify-content-center">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="h1-responsive mb-3 text-primary text-center font-weight-stone-600 pb-3">Se connecter</h1>
                    <form method="post">

                        {% if error %}
                            <div class="text-center text-danger font-weight-stone-500">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <div class="mx-1 mx-md-3">
                            <div class="md-form md-outline form-lg input-with-pre-icon">
                                <i class="fas fa-envelope input-prefix"></i>
                                <input type="email" name="email" id="inputEmail" value="{{ last_username }}"
                                       class="form-control form-control-lg" required autofocus />
                                <label for="inputEmail">Adresse e-mail</label>
                            </div>

                            <div class="md-form md-outline form-lg input-with-pre-icon mb-0">
                                <i class="fas fa-unlock input-prefix"></i>
                                <i class="fas fa-eye input-prefix"></i>
                                <input type="password" id="inputPassword" name="password" required
                                       class="form-control form-control-lg"  />
                                <label for="inputPassword">Mot de passe</label>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                            <div class="switch stone-switch">
                                <label for="remember_me">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked />
                                    <span class="lever"></span>
                                    Se souvenir de moi
                                </label>
                            </div>

                            <div class="text-center mt-3">
                                <button type="submit" name="_submit" class="btn btn-primary">Se connecter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
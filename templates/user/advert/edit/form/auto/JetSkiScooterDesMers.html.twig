{% extends 'user/advert/edit/form.html.twig' %}

{% block app_advert_type %}
{% endblock %}

{% block app_advert_traitement %}
{% endblock %}

{% block app_advert_detail %}
    <div class="form-row">
        <div class="col-12 col-md-4 col-lg-3">
            <div class="d-flex flex-wrap">
                <div class="select-outline position-relative w-100">
                    {{ form_widget(form.marque) }}
                    <label>{{ form.marque.vars.label }}</label>
                </div>
                <div style="margin-top: -15px;" class="red-text font-weight-stone-500">{{ form_errors(form.marque) }}</div>
            </div>
        </div>
        <div class="col-12 col-md-4 col-lg-3">
            <div class="d-flex flex-wrap">
                <div class="select-outline position-relative w-100">
                    {{ form_widget(form.model) }}
                    <label>{{ form.model.vars.label|raw }}</label>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 col-lg-3">
            <div class="d-flex flex-wrap">
                <div class="select-outline position-relative w-100">
                    {{ form_widget(form.autoYear) }}
                    <label>{{ form.autoYear.vars.label|raw }}</label>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 col-lg-3">
            <div class="d-flex flex-wrap">
                <div class="select-outline position-relative w-100">
                    {{ form_widget(form.autoColor) }}
                    <label>{{ form.autoColor.vars.label|raw }}</label>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 col-lg-3">
            {{ form_row(form.cylindree) }}
        </div>
        <div class="col-12 col-md-4 col-lg-3">
            <div class="d-flex flex-wrap">
                <div class="select-outline position-relative w-100">
                    {{ form_widget(form.typeCarburant) }}
                    <label>{{ form.typeCarburant.vars.label|raw }}</label>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



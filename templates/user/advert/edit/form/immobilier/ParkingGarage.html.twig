{% extends 'user/advert/edit/form.html.twig' %}

{% block app_advert_type %}
{% endblock %}

{% block app_advert_traitement %}
{% endblock %}

{% block app_advert_detail %}
    <div class="form-row">
        <div class="col-12 col-md-4 col-lg-3">
            {{ form_row(form.surface) }}
        </div>
        <div class="col-12 app-radio-block-parent">
            <div class="font-weight-stone-600 mb-2">{{ form.immobilierState.vars.label|capitalize }}</div>
            {% for choices in form.immobilierState.vars.choices %}
                <div class="app-radio-block grey-text text-center py-3 px-2 rounded mr-md-2">
                    <div class="mb-3 label font-weight-stone-600">{{ form.immobilierState.vars.choices[loop.index0].label }}</div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input with-gap" id="{{ form.immobilierState.vars.id }}_{{ loop.index0 }}"
                               value="{{ form.immobilierState.vars.choices[loop.index0].value }}" name="{{ form.immobilierState.vars.full_name }}"
                               {% if advert.immobilierState == form.immobilierState.vars.choices[loop.index0].value %}checked{% endif %}>
                        <label class="form-check-label" for="{{ form.immobilierState.vars.id }}_{{ loop.index0 }}"></label>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}





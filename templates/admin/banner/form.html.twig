<div class="form-row">
    <div class="col-12">
        <div class="h5-responsive">
            <div class="badge badge-grey d-inline-block mr-1" style="position: relative; bottom: 6px;">1</div>
            <div class="grey-text d-inline-block font-weight-stone-600">Information de base</div>
        </div>
    </div>
</div>
<div class="row d-flex justify-content-center justify-content-md-start mb-5">
    <div class="col-12 col-md-4">
        {{ form_row(form.name) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
    <div class="col-12 col-md-4">
        {{ form_row(form.startDate) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
    <div class="col-12 col-md-4">
        {{ form_row(form.endDate) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
    <div class="col-12 col-md-4 mt-4">
        <div class="app-checkbox-field-bulk">
            <div class="font-weight-stone-600 mb-2">{{ form.services.vars.label }}</div>
            {{ form_widget(form.services) }}
        </div>
    </div>
    <div class="col-12 col-md-4 mt-4">
        <div class="grey-text pb-1">{{ form.enabled.vars.label|trans }}</div>
        <div class="switch stone-switch mt-1 ml-md-2">
            <label>
                Non
                <input type="checkbox" name="{{ form.enabled.vars.full_name }}" id="{{ form.enabled.vars.id }}"
                       value="{{ form.enabled.vars.value }}" {% if form.enabled.vars.checked %}checked="checked{% endif %}">
                <span class="lever"></span>
                Oui
            </label>
        </div>
    </div>
</div>

<div class="form-row mt-4">
    <div class="col-12">
        <div class="h5-responsive">
            <div class="badge badge-grey d-inline-block mr-1" style="position: relative; bottom: 6px;">2</div>
            <div class="grey-text d-inline-block font-weight-stone-600">Gestion du bouton</div>
        </div>
    </div>
</div>
<div class="form-row mb-4">
    <div class="col-12 col-md-4">
        {{ form_row(form.link) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
</div>

<div class="form-row">
    <div class="col-12">
        <div class="h5-responsive">
            <div class="badge badge-grey d-inline-block mr-1" style="position: relative; bottom: 6px;">3</div>
            <div class="grey-text d-inline-block font-weight-stone-600">Image</div>
        </div>
    </div>
</div>
<div class="form-row mt-4">
    {% if banner.id %}
        <div class="col-5 col-md-4 col-lg-3">
            <div class="file-field">
                <div class="btn btn-mdb-color float-left">
                    <span>Choisir une photo</span>
                    <input type="file" name="{{ form.file.children.file.vars.full_name }}" id="entity-image" />
                </div>
            </div>
        </div>
        <div class="col-4 col-md-2">
            <img src="{{ vich_uploader_asset(banner, 'file') }}" alt="" class="img-fluid img-thumbnail" id="image-view" />
        </div>
    {% else %}
        <div class="col-5 col-md-4 col-lg-3">
            <div class="file-field">
                <div class="btn btn-mdb-color float-left">
                    <span>Choisir une photo</span>
                    <input type="file" name="{{ form.file.children.file.vars.full_name }}" id="entity-image" />
                </div>
            </div>
        </div>
        <div class="col-4 col-md-2">
            <img src="" alt="" class="img-fluid img-thumbnail" id="image-view" />
        </div>
    {% endif %}
</div>




